# Travis configuration
language: python

# whitelist
branches:
    only:
        - master

# enable docker
services:
 - docker

env:
    matrix:
     - PYTHON_VERSION=py27
     - PYTHON_VERSION=py33
     - PYTHON_VERSION=py34
     - PYTHON_VERSION=py35
     - PYTHON_VERSION=py36
     - PYTHON_VERSION=pypy

before_install:
    - sudo apt-get update -qq
    - docker version
    - python -V
    - pip -V

install:
    - pip install pip --upgrade
    - pip install coveralls


script: scripts/run_python.sh

after_success:
    - coveralls


notifications:
    email:
        recipients:
           - thomas.lehmann.private@gmail.com
        on_success: always
        on_failure: always
